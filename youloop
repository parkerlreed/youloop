#!/bin/bash

#mpv arguments
mpvargs=("--hwdec" "no" "--fs")

#Video formats to be pulled by youtube-dl
mpvquality=("--ytdl-format=bestvideo[ext=mp4][height<=?1080]+bestaudio[ext=m4a]")

#Create file to store last URL
touch /tmp/videourl
touch /tmp/videostatus

function loop(){
	#Sleep to prevent while loop spam
	sleep 2
	#Store the current selection
	local url=$(xclip -selection clipboard -o)
	local url2=$(cat /tmp/videourl)
	if [[ "$url" == "$url2" ]]; then return; fi
	case "$url" in
		*youtube*) play "$url" "${mpvquality[@]}" ;;
		*youtu.be*) play "$url" "${mpvquality[@]}" ;;
		*vimeo*) play "$url";;
		*twitch*) play "$url" ;;
		*.cc.com*) play "$url" ;;
		*ted.com*) play "$url" ;;
		*vine.*) play "$url" ;;
		*) return ;;
	esac
}

play() {
	local url="$1"
	shift # shift means url is no longer in "$@"; the rest of the args are passed to mpv
	
	#If above is true then store the new URL to the file
	echo "$url" > /tmp/videourl
	#Play the video
	mpv "${mpvargs[@]}" "$url" "$@" & status
}

status() {
	echo "Loading" > /tmp/videostatus
	sleep 10
	echo "" > /tmp/videostatus
}

#Loop until Ctrl-C
while(true)
do
	loop
done
